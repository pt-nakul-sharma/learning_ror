root = true

[*]
end_of_line = lf
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true
max_line_length = 120

# Ruby files
[*.rb]
indent_size = 2
indent_style = space
max_line_length = 120

# ERB templates
[*.erb]
indent_size = 2
indent_style = space

# YAML files
[*.{yml,yaml}]
indent_size = 2
indent_style = space

# Encrypted YAML files
[*.yml.enc]
insert_final_newline = false

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2
indent_style = space

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2
indent_style = space

# JSON files
[*.json]
indent_size = 2
indent_style = space

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off